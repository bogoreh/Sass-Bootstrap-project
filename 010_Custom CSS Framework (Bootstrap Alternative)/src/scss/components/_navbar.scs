.navbar {
    display: flex;
    align-items: center;
    padding: 1rem 0;
    
    .container {
        @include flex-between;
    }
}

.navbar-brand {
    font-size: 1.5rem;
    font-weight: 700;
    color: $primary;
}

.navbar-nav {
    display: flex;
    gap: 2rem;
    
    .nav-link {
        font-weight: 500;
        transition: color 0.3s ease;
        
        &:hover {
            color: $primary;
        }
    }
}